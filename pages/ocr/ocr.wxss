/**index.wxss**/
.container {
  width: 100vw;
  height: 100vh;
}

.container3 {
  position: absolute; 
  top: 12vh;
  left: 0;
  overflow: hidden;
}

.img-container {
  width: 100vw;
  height: calc(88vw * 12 / 17);
  overflow: hidden;
}

.ingredient-img {
  position: absolute; 
  top: -30vh;
  width: 100vw;
  height: 100vh;
}

.container2 {
  position: absolute; 
  top: 12vh; 
  left: 0;
}

.gap-container {
  width: 100vw;
  height: calc(88vw * 12 / 17);
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.gap-image {
  width: 88vw;
  height: calc(88vw * 12 / 17);
}

.gap-left, .gap-right{
  background-color: rgba(255, 255, 255, 1);
  width: 6vw;
  height: 100%;
}

.conclusion-text {
  position: absolute; 
  top: calc(88vw * 12 / 17 + 12vh + 20px); 
  left: 6vw;
  color: #000000;
  width: 88vw;
  height: calc(100vh - (88vw * 12 / 17 + 12vh + 20px) - 14px);
  background-color: rgba(255, 255, 255, 1);
  text-align: left;
  font-size: 14px;
}

.nav-title-container {
  position: absolute;
  width: 100vw;
  height: 32px;
}

.nav-title {
  display: flex;
  justify-content: center;
  align-items: center;
  color:rgb(0, 0, 0, 1);
  text-align: center;
  font-size: 18px;
  width: 100vw;
  height: 100%;
}

.back-container {
  position: absolute; 
  left: 6vw;
  width: 26px;
  height: 26px;
  z-index: 100;
}

.back-image {
  width: 100%;
  height: 100%;
}