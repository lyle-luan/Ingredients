.container {
}

.camera, .controls, .img-area, .img-view {
  position: absolute; 
  top: 0; 
  left: 0;
  width: 100vw;
  height: 100vh; 
}

.controls-container {
  height: 100vh;
}

.mask-top {
  width: 100vw;
  height: 30vh;
  background-color: rgba(0, 0, 0, 0.3);
}

.gap-container {
  width: 100vw;
  height: calc(88vw * 12 / 17);
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.gap-image {
  width: 88vw;
  height: calc(88vw * 12 / 17);
}

.gap-left {
  background-color: rgba(0, 0, 0, 0.3);
  width: 6vw;
  height: 100%;
}

.gap-right {
  background-color: rgba(0, 0, 0, 0.3);
  width: 6vw;
  height: 100%;
}

.mask-bottom {
  width: 100vw;
  height: 100vh;
  background-color: rgb(0, 0, 0, 0.3);
}

.shooting-requirements {
  position: absolute; 
  color:rgb(255, 255, 255, 0.7);
  text-align: center;
  font-size: 14px;
  width: 100vw;
  margin-top: 10px;
}

.nav-title-container {
  position: absolute;
  width: 100vw;
  height: 32px;
}

.nav-title {
  display: flex;
  justify-content: center;
  align-items: center;
  color:rgb(255, 255, 255, 1);
  text-align: center;
  font-size: 18px;
  width: 100vw;
  height: 100%;
}

.controls-2 {
  position: absolute;
  width: 100vw;
  height: 80px;
  bottom: 14vh;
}

.controls-container-2 {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.takephoto-container {
  width: 80px;
  height: 80px;
}

.takephoto-image {
  width: 80px;
  height: 80px;
}

.takephoto-overlay {
  width: 80px;
  height: 80px;
}

.down-container {
  width: 30px;
  height: 30px;
  z-index: 100;
}

.down-image {
  width: 30px;
  height: 30px;
}

.down-overlay {
  width: 30px;
  height: 30px;
}