.container {
  background-color: rgb(255, 255, 255);
}

.cropper {
  position: absolute; 
  top: 0; 
  left: 0;
  width: 100vw;
  height: 100vh;
}

.shooting-requirements {
  position: absolute; 
  color:rgb(255, 255, 255, 0.7);
  text-align: center;
  font-size: 14px;
  width: 100vw;
  top: calc(30vh + 10px + 88vw * 12 / 17);
}

.nav-title-container {
  position: absolute;
  width: 100vw;
  height: 32px;
}

.nav-title {
  display: flex;
  justify-content: center;
  align-items: center;
  color:rgb(255, 255, 255, 1);
  text-align: center;
  font-size: 18px;
  width: 100vw;
  height: 100%;
}

.controls-2 {
  position: absolute;
  width: 100vw;
  height: 80px;
  bottom: 0;
}

.controls-container-2 {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.takephoto-container {
  background-color: rgb(27, 184, 77);
  width: 50vw;
  height: 80px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.takephoto-text {
  color: rgb(255, 255, 255);
  text-align: center;
  font-size: 25px;
  font-size: 25px;
  font-weight: 100;
}

.down-container {
  background-color: rgb(242, 242, 242);
  width: 50vw;
  height: 80px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.down-text {
  color: rgb(221, 43, 50);
  text-align: center;
  font-size: 25px;
  font-weight: 100;
}